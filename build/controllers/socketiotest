from core import socketio
from flask_socketio import send


@socketio.on('message')
def handle_message(msg):
    if msg == 'hello':
        send('hello trigger', broadcast=True)
    print(' * SocketIO -> ' + msg)
    send(msg, broadcast=True)


@socketio.on('disconnect')
def test_disconnect():
    print('Client disconnected')


@socketio.on_error()
def on_error():
    print('Client DC')